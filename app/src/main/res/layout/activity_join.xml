<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/join_email"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="이메일 인증"
                android:imeOptions="actionNext"
                android:inputType="text"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/join_email_button"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_background"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="인증 발송"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/email_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="올바른 이메일 주소만 입력 가능합니다."
                android:textSize="12dp"
                android:textColor="#FF1100"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_confirm_layout"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:visibility="gone">
            <EditText
                android:id="@+id/join_email_confirm"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="인증 코드 입력"
                android:imeOptions="actionNext"
                android:inputType="text"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/email_confirm_button"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@drawable/button_background"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="인증 확인"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:passwordToggleEnabled="true"
                android:hint="비밀번호"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_pw"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/pw_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="8~20자, 영문 숫자 특수문자가 모두 조합 되어야 합니다."
                android:textSize="12dp"
                android:textColor="#FF1100"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutRePw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:passwordToggleEnabled="true"
                android:hint="비밀번호 확인">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/join_re_pw"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/re_pw_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="비밀번호가 일치하지 않습니다."
                android:textSize="12dp"
                android:textColor="#FF1100"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/join_name"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_text_background"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:hint="닉네임"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="12"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp">
            <TextView
                android:id="@+id/name_validate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="닉네임은 최대 한글 6자, 영문 12자까지 입력 가능합니다."
                android:textSize="12dp"
                android:textColor="#FF1100"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <CheckBox
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/checkbox1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="전체 동의(이용약관 및 개인정보 취급방침)"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <CheckBox
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/checkbox2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="(필수) 이용 약관에 동의합니다."
                android:textSize="12dp"
                android:textColor="#000"
                />

            <TextView
                android:layout_marginLeft="2dp"
                android:id="@+id/rule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관보기"
                android:textSize="11dp"
                android:textColor="#8F8F8F"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <CheckBox
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/checkbox3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="(필수) 개인정보 취급 방침에 동의합니다."
                android:textSize="12dp"
                android:textColor="#000"
                />

            <TextView
                android:layout_marginLeft="2dp"
                android:id="@+id/rule2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="약관보기"
                android:textSize="11dp"
                android:textColor="#8F8F8F"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <CheckBox
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/checkbox4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="(선택) 이벤트 및 마케팅 정보 알림 수신 동의"
                android:textSize="12dp"
                android:textColor="#000"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background2"
            android:text="회원가입"
            android:textColor="#9FAEF2"
            android:textSize="14dp"
            android:textStyle="bold"
            android:id="@+id/join_btn"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:enabled="false"
            />

    </LinearLayout>
</ScrollView>